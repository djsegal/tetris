<%
  preview_piece_count = piece_preview.visible_count
  hold_piece_count = 1
  score_tile_count = 1
  info_items_count = preview_piece_count + hold_piece_count + score_tile_count
  div_height = 100.to_f / ( info_items_count )
  div_style = 'height: ' + div_height.to_s + '%'
%>

<div class='cs-player-box-item cs-fill' style='<%= div_style %>'>
  <%= render partial: 'player_box_info_hold' %>
</div>

<div class='cs-player-box-item cs-fill' style='<%= div_style %>'>
  <%= render partial: 'player_box_info_scores' %>
</div>

<% preview_piece_count.times do |piece_number| %>
  <div class='cs-player-box-item cs-fill' style='<%= div_style %>'>
    <%= render partial: 'player_box_info_preview', locals: {piece_number: piece_number } %>
  </div>
<% end %>

.cs-home-page {
  width: 100%;
  height: 100%;
  background-image: url(<%= asset_path 'tetris-home.jpg' %>);
  background-size: 100% 100%;
}

.cs-new-game-screen {
  width: 100%;
  height: 100%;
  text-align: center;
  background-color: black;
  padding: 40px;
  box-sizing: border-box;

  table {
    width: 100%;
    height: 100%;
    border: 5px solid green;
    border-radius: 10px;
  }

  td {
    font-family: 'Arcade';
    font-size: xx-large;
    color: whitesmoke;
  }
}

.cs-player-select {
  width: 32.5%;
  cursor: pointer;
}

.cs-player-select-highlight {
  background-color: darkslategrey;
  opacity: 0.3;
}

.cs-player-box {
  height: 100%;
  display: inline-block;
  background-color: whitesmoke;
}

.cs-player-box-item {
  box-sizing: border-box;
  padding: 5%;
}

.cs-player-box-grid {
  width: calc(70% - 2.5px);
}

.cs-player-box-info {
  width: calc(30% - 2.5px);
}

.cs-player-box-grid {

  .cs-hidden td {
    padding: 0;
  }

  td.cs-hidden {
    padding: 0;
  }

  tr:not(.cs-greyed-out) td:not(.cs-greyed-out) {

    border-radius: 20%;

    background: -webkit-linear-gradient(left top, whitesmoke, transparent, transparent, transparent); /* For Safari 5.1 to 6.0 */
    background: -o-linear-gradient(bottom right, whitesmoke, transparent, transparent, transparent); /* For Opera 11.1 to 12.0 */
    background: -moz-linear-gradient(bottom right, whitesmoke, transparent, transparent, transparent); /* For Firefox 3.6 to 15 */
    background: linear-gradient(to bottom right, whitesmoke, transparent, transparent, transparent); /* Standard syntax */
  }

  tr {
    opacity: .9;
  }

  td {
    border: 1px solid transparent;
  }

}

.cs-player-box-preview {
  td {
    border: 1px solid black;
  }
}
